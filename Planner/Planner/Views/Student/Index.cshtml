<!DOCTYPE html>

<html ng-app="Planner" lang="en-us">
<head>
    <title>Home</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/fonts/fontawesome-webfont.woff2" rel="stylesheet" />
    <script src="~/Scripts/Shared/planner.module.js"></script>
    <script src="~/Scripts/Shared/planner.service.js"></script>
    <script src="~/Scripts/Student/home.controller.js"></script>
</head>
<body style="background-color: #c8c8c8">
    <div ng-controller="HomeCtrl as vm">
        <div class="container-fluid" style="margin: 20px; background-color: #c8c8c8; max-width: 380px; margin: 30px auto">

            <div id="main-1">

                <!-- Header -->
                <div class="row" style="border-radius: 20px 20px 0px 0px; border-left: 1px solid black; border-right: 1px solid black; border-top: 1px solid black; background-color: #00a8e2">
                    <div class="col-md-12" style="text-align: center">
                        <img src="~/Content/Logo.png" width="332" height="75" style="padding-top:20px" />
                        <h2 style="color: white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">STUDENT VIEW</h2>
                    </div>
                </div>

                <!-- Body -->
                <div class="row panel-footer" style="border-left: 1px solid black; border-right: 1px solid black">
                    <div class="col-md-12">
                        <table class="table">
                            <tr>
                                <td>
                                    <h4>
                                        Class:
                                    </h4>
                                </td>
                                <td>
                                    <select class="form-control" ng-model="classes" ng-init='classes = "ITM 320"' ng-change=vm.getSteps(classes)>
                                        <option ng-repeat="class in vm.class">{{class}}</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>
                                        Assignment:
                                    </h4>
                                </td>
                                <td>
                                    <select class="form-control">
                                        <option ng-repeat="item in vm.info track by $index">{{item}}</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h4>Step #1:</h4>
                                    <textarea en class="form-control" rows="3" style="resize: vertical">{{vm.step}}</textarea>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h4>Step #2:</h4>
                                    <textarea class="form-control" rows="3" style="resize: vertical" ng-model="area1"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h4>Step #3:</h4>
                                    <textarea class="form-control" rows="3" style="resize: vertical" ng-model="area2"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: center">

                                    <h4>Begin Date:</h4>
                                    <input type="date" class="form-control" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Footer -->
                <div class="row panel-footer" style="border-radius: 0px 0px 20px 20px; border-left: 1px solid black; border-right: 1px solid black; border-bottom: 1px solid black; background-color: #00a8e2">
                    <div class="col-md-12">
                        <h4 style="text-align: center">Copyright 2017 - Boise State University</h4>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
